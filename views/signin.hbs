<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In Page</title>
    <style>
        h1{
            background-color: red;
        }
        body{
            width: 80%;
            margin: auto;
        }
        #signupheading{
            margin: 20px 0;
        }
        #signup {
            float: right;
        }
        #passwordbox {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h3 id="signupheading">Sign-In</h3>
    <form class="row g-3" action="/login" method="post">
  <div class="col-md-6">
  <div class="col-12">
    <label for="inputUserName" class="form-label">Username</label>
    <input type="text" name="username" class="form-control" id="inputUserName" placeholder="Enter Your username" required>
  </div>
  <div id="passwordbox" class="col-12">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" class="form-control" id="password" placeholder="Enter Password" required>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-success">Sign in</button>
    <button onclick="signuppageurl()" type="button" id="signup" class="btn btn-primary">Sign Up</button>
  </div>
</form>

<script>
  const signuppageurl = () => {
    window.location.href = "/signup";
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>
